{
  "on_exception": {
    "query_error": {
      "action": "document_issue",
      "doc_path": "docs/errors/missing_tables/fresh_users.md",
      "summary": "Detected query for non-existent table: fresh_users",
      "fix_suggestion": "Run migrations or verify if model is pointing to correct table"
    }
  },
  "available_commands": [
    "watch:model:FreshUser",
    "validate:table_binding",
    "suggest:run_migrations",
    "log:exception:query"
  ],
  "error_patterns": {
    "missing_table": {
      "pattern": "SQLSTATE[42P01]: Undefined table",
      "action": "create_migration_suggestion",
      "auto_fix": false
    },
    "duplicate_table": {
      "pattern": "SQLSTATE[42P07]: Duplicate table",
      "action": "suggest_fresh_migration",
      "auto_fix": false
    },
    "foreign_key_constraint": {
      "pattern": "SQLSTATE[23503]: Foreign key violation",
      "action": "check_relationships",
      "auto_fix": false
    }
  },
  "project_context": {
    "database_prefix": "fresh_",
    "main_models": ["User", "SiteSettings", "HB837", "Consultant"],
    "critical_tables": ["fresh_users", "fresh_site_settings", "fresh_migrations"]
  }
}
